{
  "manifest_version": 3,
  "name": "Global side panel",
  "version": "1.0",
  "description": "Shows how to display the bosco side panel",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["offscreen", "sidePanel", "storage"],
  "action": {
    "default_title": "Click to open panel"
  },
  "web_accessible_resources": [
  {
    "resources": ["offscreen.html"],
    "matches": [
      "https://accounts.google.com/*",
      "https://apis.google.com/*"
      ]
  }
],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://accounts.google.com; child-src 'self';"
  }
}
